<mvc:View
    controllerName="ns.project1.controller.ProductDetail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page title="{i18n>detailPageTitle}">
        <ObjectHeader title="Product Details" />
        <content>
            <List>
                <DisplayListItem
                    label="Product ID"
                    value="{ProductID}"
                />
                <DisplayListItem
                    label="Quantity Per Unit"
                    value="{QuantityPerUnit}"
                />
                <DisplayListItem
                    label="Unit Price"
                    value="{UnitPrice}"
                />
            </List>
        </content>
    </Page>
</mvc:View>
